{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Minify",
            "type": "shell",
            "command": "uglifyjs",
            "args": [
                "--compress",
                "--output",
                "./out/main.min.js",
                "--no-annotations",
                "--source-map",
                "\"filename='main.min.js.map'\"",
                "--",
                "./out/main.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Compile"
            ]
        }
    ]
}